<%= form_for(@databox) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
      <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
			<%= f.file_field :data, :class => 'dropzone' %>
  </div>
  <div class="form-group">
      <%= f.submit :class => "btn btn-primary" %>
  </div>
<% end %>
