<%= form_for(@databox) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <div class="col-lg-10">
      <%= f.text_field :title %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <div class="col-lg-10">
      <%= f.text_area :description %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10">
      <%= f.file_field :data %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit :class => "btn btn-primary" %>
    </div>
  </div>
<% end %>
