<div class="page-header">
  <%= link_to databoxes_path, :class => 'btn btn-default' do %>
    Back
  <% end %>
  <%= link_to edit_databox_path(@databox), :class => 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show databox</h1>
</div>
<p style="color:black"><%= @databox.id %></p>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @databox.title %></dd>

  <dt>Description:</dt>
  <dd><%= @databox.description %></dd>

	<% if @databox.data.try(:file) %>
    <dt>File:</dt>
		<dd><%= link_to 'Download Data', :action => "download_data", :id => @databox.id %></dd>
	<% end %>		
</dl>
